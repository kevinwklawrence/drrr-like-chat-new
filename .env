# Duranu Chat - Environment Configuration
# Copy this file to .env and update the values for your production environment

# Database Configuration
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=drrr_clone

# Site Configuration
SITE_URL=https://yourwebsite.com
SITE_NAME=Duranu Chat
SITE_PASSWORD=baccano

# Security Settings
SECRET_KEY=your-secret-key-here-change-this
CSRF_SECRET=your-csrf-secret-here
ADMIN_EMAIL=admin@yourwebsite.com

# Features
ENABLE_REGISTRATION=true
ENABLE_GUEST_LOGIN=true
MAX_ROOMS_PER_USER=5
MAX_USERS_PER_ROOM=50

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=300
MAX_MESSAGES_PER_MINUTE=10

# File Upload (if implementing avatar uploads)
MAX_UPLOAD_SIZE=2048000
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# Session Settings
SESSION_LIFETIME=86400
SESSION_NAME=duranu_session

# Logging
LOG_LEVEL=ERROR
LOG_PATH=./logs/

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is temporarily down for maintenance

# External Services
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Cron/Cleanup
CLEANUP_INTERVAL=3600
AUTO_DELETE_EMPTY_ROOMS=true
KEEP_CHAT_HISTORY_DAYS=30

# Email Settings (if implementing email features)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourwebsite.com
SMTP_PASSWORD=your_smtp_password
SMTP_ENCRYPTION=tls

# Development Settings (set to false in production)
DEBUG_MODE=false
SHOW_SQL_ERRORS=false
ENABLE_PROFILING=false